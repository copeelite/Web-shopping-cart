<!doctype html>
<html lang="en">
  <head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="/css/SignUpLogin.css">
  </head>
  {{>navbar}}
  <body class="text-center">
    
    <main class="login_container form-signin align-items-center m-auto">
        <form method="post" action="/user/sign-up">
            <h1 class="h3 mb-3 fw-normal">Please Sign-up</h1>
            <div class="checkbox mb-3">
                <p>Create your account by entering your email address and choosing a password</p>
            </div>
            <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="name@example.com"
            name="firstName" id="firstName" value="{{values.firstName}}">
            <label for="floatingInput">First Name</label>
            {{#if validationMessages.firstName}}
              <span style="color: red;">{{validationMessages.firstName}}</span><br/>
            {{/if}}
            </div>
            <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="name@example.com"
            name="lastName" id="lastName" value="{{values.lastName}}">
            <label for="floatingInput">Last Name</label>
            {{#if validationMessages.lastName}}
              <span style="color: red;">{{validationMessages.lastName}}</span><br/>
            {{/if}}
            </div>
            <div class="form-floating mb-2">
            <input type="email" class="form-control" placeholder="name@example.com"
            name="email" id="email" value="{{values.email}}">
            <label for="floatingInput">Email address</label>
            {{#if validationMessages.email}}
              <span style="color: red;">{{validationMessages.email}}</span><br/>
            {{/if}}
            </div>
            <div class="form-floating">
            
            
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
            name="password" value="{{values.password}}">
            <label for="floatingPassword">Password</label>
            <i class="bi bi-eye-slash" id="togglePassword"></i>
            {{#if validationMessages.password}}
              <span style="color: red;">{{validationMessages.password}}</span><br/>
            {{/if}}
            </div>

            
            <button class="w-100 btn btn-lg btn-danger mt-3" type="submit">Sign up today</button>
        </form>
    </main>
    <script>
            window.onload = (event) => {
              togglePassword.textContent = " not show the password"
            }
            const togglePassword = document.querySelector("#togglePassword");
            const password = document.querySelector("#floatingPassword");
            togglePassword.addEventListener("click", function () {
                // toggle the type attribute
                
                togglePassword.textContent = togglePassword.textContent == " show the password" ?  " not show the password" : " show the password"
                const type = password.getAttribute("type") === "password" ? "text" : "password";
                password.setAttribute("type", type);
                // toggle the icon
                this.classList.toggle("bi-eye");
            });
        </script>

    {{>footer}}
  </body>
</html>
